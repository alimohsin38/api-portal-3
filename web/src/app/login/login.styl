:root
    --bodyBackground: var(--base)
.paddingNull
    padding: 0
.marginNull
    margin: 0
.loginWrapper
    background-color: transparent
    color: #000
    padding: 15px
    margin: 0
    transform: translateY(70px)
.header
    background-color: var(--base6)
    padding: 5px 15px 0
    margin: 0
    border-bottom: 1px solid var(--base3)
    box-shadow: 0 0 8px var(--base3)
.logoImg
    display: inline-block
    margin: auto auto auto 0
    cursor: pointer
.logoTxt
    display: inline-block
    font-size: 25px
    font-weight: 100
    color: #000
    margin: 0
    padding: 9px 10px
    position: relative
    bottom: 15px
    cursor: pointer
.docsLink
    color: #3b9af9
    display: inline-flex
    padding: 0
    bottom: -13px
    text-decoration: underline
    float: right