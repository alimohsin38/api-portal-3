.formGroup
    margin-bottom: 0

.formGroupHidden
    border: 0
    clip: rect(0,0,0,0)
    height: 1px
    margin: -1px
    overflow: hidden
    padding: 0
    position: absolute
    width: 1px

.wrapper
    display: flex
    align-items: center
    justify-content: space-between
    padding: 0 0 0 1.25rem 
    border: 1px solid transparent 
    
    .icon
        display: flex
        padding: 0.75rem
        color: #a1a1a1
        
    &:hover
        cursor: pointer
        border: 1px solid #e9e9e9
        
        .icon
            background: #e9e9e9
            color: #fff

.inlineChildren
    display: inline-flex
    
