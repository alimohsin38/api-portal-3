.selected {
    font-weight: bolder
}

.container {
    display: flex
    width: 100%
    padding: .5rem 0 .25rem 1.25rem
    align-items: center
    justify-content: center
    border-bottom: 1px solid #bbb
}

.hovered {
    background: rgba(0, 0, 0, 0.5)
    cursor: pointer
}

.name {
    flex: 0 0 7rem
    margin-right: auto
    padding-bottom: .25rem
    text-overflow: ellipsis
}

.info {
    display:flex
    padding-right: 1.875rem
    flex: 0 0 20rem
    align-items: center
}

.userImage {
    padding-right: .7rem
    flex: 0 0 1.875rem
}

.sessions {
    flex: 0 0 5rem
    margin-right: auto

    > div {
        display: flex
        justify-content: space-between

        .indicator {
            font-size: 1.4rem
        }

        .sessionInfo {
            width: 100%
            padding-left: 0.5rem
            overflow-x: hidden
        }
    }
}

.inputGroup {
    padding-left: 25%
}

.centeredInput {
    margin-right: 25%
    width: 50%
    text-align: center
}
