.loaderSm 
    font-size: 1.5rem
    
.loaderMd
    font-size: 2rem

.loaderLg
    font-size: 2.5rem

.hidden 
    opacity: 0
 
.center
    display: flex
    justify-content: center
    animation: fadein 250ms 

.spinner
    animation: spin 2s
    animation-iteration-count: infinite
    animation-timing-function: linear
    line-height: 1em

    &:after,
    &:before
        display: inline-block
        margin-top: 1px

@keyframes spin 
    from 
        transform:rotate(0deg)
    to 
        transform:rotate(360deg)
        
@keyframes fadein 
    from 
        opacity: 0
    to 
        opacity: 1
