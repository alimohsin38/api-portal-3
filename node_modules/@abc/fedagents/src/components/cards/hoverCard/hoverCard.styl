iconColor = #a1a1a1
activeContainerBackground = #fcfcfc
activeIconBackground = #e9e9e9
activeContainerBorder = 1px solid #ededed

.container
    border: 1px solid transparent
    padding: 1.5rem 1.8rem
    position: relative
    height: 100%

    &.hoverContainer
        > .iconContainer
            &:hover
                background-color: darken(activeIconBackground, 3%)

        &.hovered,
        &:hover
            background-color: activeContainerBackground
            border: activeContainerBorder

            & > .iconContainer
                background-color: activeIconBackground

.iconContainer
    display: flex
    position: absolute
    padding: .625rem
    left: 100%
    top: 0
    margin-left: -2.5rem
    cursor: pointer
    color: iconColor
    font-size: 1.25rem
