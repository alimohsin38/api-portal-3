.container
    max-width: 32.19rem

.messageContainer
    display: flex
    flex-direction: column
    justify-content: center
    padding-bottom: 2.5rem
    padding-top: 2.5rem
    text-align: center
    word-wrap: break-word

.header
    padding: 0 6.25rem

.headerIcon
    color: var(--modalConfirmationHeader);
    font-size: 4.25rem
    display: flex
    justify-content: center
    align-items: center

.headerTitle
    text-align: center
    padding-top: 2.125rem
    padding-bottom: 3rem
    word-wrap: break-word

.buttons
    display: flex
    padding-bottom: 1.25rem
    min-width: 1.25rem

    & > :first-child
        margin-right: .5rem

    & > :last-child
        margin-top: 0
        margin-left: .5rem

