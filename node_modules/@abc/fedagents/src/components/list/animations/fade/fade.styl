transition-duration-enter = 1000ms
transition-duration-exit = 1000ms

// styl-lint:disable-block no-misspelled-properties
:export
    transitionDurationEnter: transition-duration-enter
    transitionDurationExit: transition-duration-exit

.appear
    flex-basis: 100%
    opacity: 1

    &.appearActive
        animation-duration: transition-duration-enter
        animation-timing-function: ease-in

        &:global(.horizontal)
            animation-name: fadeInHorizontal

        &:global(.vertical)
            animation-name: fadeInVertical

.enter
    flex-basis: 100%
    opacity: 1

    &.enterActive
        animation-duration: transition-duration-enter
        animation-timing-function: ease-in

        &:global(.horizontal)
            animation-name: fadeInHorizontal

        &:global(.vertical)
            animation-name: fadeInVertical

        &:global(.loading),
        &:global(.noResults)
            height: 0

.exit
    flex-basis: 0
    opacity: 0

    &:global(.loading),
    &:global(.noResults)
        height: 0

    &.exitActive
        animation-duration: transition-duration-exit
        animation-timing-function: ease-out

        &:global(.horizontal)
            animation-name: fadeOutHorizontal

        &:global(.vertical)
            animation-name: fadeOutVertical

@keyframes fadeNone
    0%
        flex-basis: 0
        min-height: 0
        min-width: 0
        opacity: 0
    100%
        flex-basis: 0
        min-height: 0
        min-width: 0
        opacity: 0

@keyframes fadeInHorizontal
    0%
        flex-basis: 0
        max-height: 0
        opacity: 0
    49%
        max-height: 0
    50%
        flex-basis: 100%
        max-height: none
        opacity: 0
    100%
        flex-basis: 100%
        max-height: none
        opacity: 1

@keyframes fadeOutHorizontal
    0%
        flex-basis: 100%
        max-height: none
        opacity: 1
    50%
        flex-basis: 100%
        max-height: none
        opacity: 0
    51%
        max-height: 0
    100%
        flex-basis: 0
        max-height: 0
        opacity: 0

@keyframes fadeInVertical
    0%
        flex-basis: 0
        min-height: 0
        min-width: 0
        opacity: 0
    50%
        flex-basis: 100%
        min-height: min-content
        min-width: min-content
        opacity: 0
    100%
        flex-basis: 100%
        min-height: min-content
        min-width: min-content
        opacity: 1

@keyframes fadeOutVertical
    0%
        flex-basis: 100%
        min-height: min-content
        min-width: 0
        opacity: 1
    50%
        flex-basis: 100%
        min-height: min-content
        min-width: 0
        opacity: 0
    100%
        flex-basis: 0
        min-height: 0
        min-width: 0
        opacity: 0
