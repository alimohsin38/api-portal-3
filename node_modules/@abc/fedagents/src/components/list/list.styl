transition-duration = 300ms

.listWrapper
    display:flex
    flex-direction: row
    overflow: visible
    > *
        flex: 1
        width: 100%
        transition-duration: transition-duration, transition-duration
        transition-property: height, max-height
        transition-timing-function: ease-in-out, ease-in-out

.list
    display: flex
    flex: 1
    overflow: visible
    position: relative
    width: 100%

.animatedList
    position: relative

.noResults
    width: 100%

.loading,
.noResultsItem
    flex-basis: 100%
    flex-grow: 1
    flex-shrink: 0
    left: auto !important;
    margin: auto
    min-height: 0 !important
    min-width: 100% !important
    overflow: hidden
    padding: 0
    text-align: center
    width: 100%

    p
        margin-bottom: 0

.listItem
    flex-grow: 0
    flex-shrink: 1
    flex-basis: auto
    left: auto !important;
    min-height: 0
    min-width: 0
    order: 0
    position: relative

    + .noResultsItem:last-of-type
        flex-basis: 100%
        max-height: 0
        max-width: 0
        padding: 0

.horizontalList
    flex-direction: row

.verticalList
    flex-direction: column
    flex-wrap: nowrap

    .listItem
        min-height: min-content

    &.noResults > .listItem:last-of-type
        max-height: 0
