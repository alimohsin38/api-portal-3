.popoverSelectOption
  background-color: var(--inputBackground)
  color: var(--inputText)
  display: block
  padding: 0.5em 1.25em

  &:focus,
  &:hover
    background-color: var(--selectListItemHoverBackground)
    color: var(--base)
    cursor: pointer

  &.selected
    background-color: var(--selectListItemSelectedBackground)
    color: var(--inputText)

  &.grouped
    padding-left: 0.75em

  &.disabled
    pointer-events: none
