.center
  text-align: center

.left
  text-align: left

.right
  text-align: right

.wrapper
  display: inline-block
  padding: 0
  position: relative
  .container
    cursor: pointer
  [class*=" icon-"],
  [class^="icon-"]
    pointer-events: none

  .displayText
    color: inherit
    line-height: 1
    padding-right: 0.5em
    pointer-events: none
    user-select: none
    vertical-align: middle

  select
    appearance: none
    background: transparent
    border: none
    bottom: 0
    color: transparent
    font-size: 0.875rem
    height: 100%
    left: 0
    letter-spacing: inherit
    line-height: inherit
    outline-offset: 0.125rem
    padding: inherit
    pointer-events: none
    position: absolute
    right: 0
    text-transform: normal
    top: 0
    width: 100%
    z-index: 5
    font-weight: inherit
    font-family: inherit
    &::-ms-expand
      display: none
    @media screen and (min-width:0\0)
      background-image: none\9
      padding: .25em\9

  .arrowDown
    vertical-align: middle

.popover
  .popoverInner
    max-height: 16em
    overflow-y: auto
    position: static

    > *
      overflow: hidden
      position: relative
      z-index: 5

@media (hover: none)
  .wrapper
    select
      pointer-events: all

