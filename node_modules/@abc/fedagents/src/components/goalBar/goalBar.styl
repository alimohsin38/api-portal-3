.goalBar
    display: flex
    flex-direction: column
    justify-content: center
    position: relative

.progressBar
    bottom: 0
    left: 0
    padding: 0
    pointer-events: none
    position: absolute
    top: 0

.topBar
    position: relative

.tooltip
    width: auto
    .tooltipInner
        padding: 0
        ~ *
            pointer-events: none
    .tooltipText
        display: inline-block
        padding: .5em
        pointer-events: none
        vertical-align: middle
        white-space: nowrap
        *
            letter-spacing: 0
            text-transform: none

.maxIndicator
    pointer-events: none
    position: absolute
    right: 1em
    text-align: right
    text-transform: uppercase
    vertical-align: middle
